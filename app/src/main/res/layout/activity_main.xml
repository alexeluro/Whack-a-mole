<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#DDD">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/game_title"
        android:text="Whack a Mole"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/difficulty_level"
        android:text="Difficulty: EASY"
        android:layout_below="@+id/game_title"
        android:layout_margin="20dp"
        android:textSize="16dp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/game_lives"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:layout_below="@+id/game_title">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/life_1"
            android:src="@drawable/ic_bug"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/life_2"
            android:src="@drawable/ic_bug"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/life_3"
            android:src="@drawable/ic_bug"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/game_lives"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: "
            android:layout_marginEnd="5dp"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/game_score"
            android:text="0"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"/>
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridlayout"
        android:rowCount="3"
        android:columnCount="3"
        android:layout_centerInParent="true"
        android:padding="20dp">


        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/frm00"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/hole_bg"
            android:layout_margin="10dp"
            android:onClick="holeClicked">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/mole_0_0"
                android:visibility="gone"
                android:src="@drawable/ic_bug"
                android:layout_gravity="center_vertical|center_horizontal"
                android:onClick="moleClicked"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/frm01"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/hole_bg"
            android:layout_margin="10dp"
            android:onClick="holeClicked">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/mole_0_1"
                android:visibility="gone"
                android:src="@drawable/ic_bug"
                android:layout_gravity="center_vertical|center_horizontal"
                android:onClick="moleClicked"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/frm02"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@drawable/hole_bg"
            android:layout_margin="10dp"
            android:onClick="holeClicked">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/mole_0_2"
                android:visibility="gone"
                android:src="@drawable/ic_bug"
                android:layout_gravity="center_vertical|center_horizontal"
                android:onClick="moleClicked"/>

        </FrameLayout>

<!--        SECOND ROW HERE-->

        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/frm10"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/hole_bg"
            android:layout_margin="10dp"
            android:onClick="holeClicked">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/mole_1_0"
                android:visibility="gone"
                android:src="@drawable/ic_bug"
                android:layout_gravity="center_vertical|center_horizontal"
                android:onClick="moleClicked"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/frm11"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/hole_bg"
            android:layout_margin="10dp"
            android:onClick="holeClicked">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/mole_1_1"
                android:visibility="gone"
                android:src="@drawable/ic_bug"
                android:layout_gravity="bottom|center_horizontal"
                android:onClick="moleClicked"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/frm12"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@drawable/hole_bg"
            android:layout_margin="10dp"
            android:onClick="holeClicked">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/mole_1_2"
                android:visibility="gone"
                android:src="@drawable/ic_bug"
                android:layout_gravity="center_vertical|center_horizontal"
                android:onClick="moleClicked"/>

        </FrameLayout>

<!--        THIRD ROW HERE-->

        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/frm20"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/hole_bg"
            android:layout_margin="10dp"
            android:onClick="holeClicked">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/mole_2_0"
                android:visibility="gone"
                android:src="@drawable/ic_bug"
                android:layout_gravity="center_vertical|center_horizontal"
                android:onClick="moleClicked"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/frm21"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@drawable/hole_bg"
            android:layout_margin="10dp"
            android:onClick="holeClicked">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/mole_2_1"
                android:visibility="gone"
                android:src="@drawable/ic_bug"
                android:layout_gravity="center_vertical|center_horizontal"
                android:onClick="moleClicked"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/frm22"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@drawable/hole_bg"
            android:layout_margin="10dp"
            android:onClick="holeClicked">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/mole_2_2"
                android:src="@drawable/ic_bug"
                android:visibility="gone"
                android:layout_gravity="center_vertical|center_horizontal"
                android:onClick="moleClicked"/>

        </FrameLayout>

    </GridLayout>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/soundStatus"
        android:src="@drawable/ic_volume_up"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:onClick="speakerMute"/>

</RelativeLayout>